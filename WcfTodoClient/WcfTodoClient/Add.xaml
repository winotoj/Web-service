<Window x:Class="WcfTodoClient.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WcfTodoClient"
        mc:Ignorable="d"
        Title="Add" Height="300" Width="300">
    <Grid>
        <Label Content="Task" HorizontalAlignment="Left" Margin="25,56,0,0" VerticalAlignment="Top"/>
        <Label Content="Due date" HorizontalAlignment="Left" Margin="25,87,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbTask" HorizontalAlignment="Left" Height="23" Margin="89,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbDueDate" HorizontalAlignment="Left" Height="23" Margin="89,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btSave" Content="Save" HorizontalAlignment="Left" Margin="89,168,0,0" VerticalAlignment="Top" Width="75" Click="btSave_Click"/>
        <CheckBox x:Name="cbDone" Content="is Done?" HorizontalAlignment="Left" Margin="93,128,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.283,-0.315"/>

    </Grid>
</Window>
