<Window x:Class="TodoList_WebService_Client.WinAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList_WebService_Client"
        mc:Ignorable="d"
        Title="WinAdd" Height="300" Width="300">
    <Grid>
        <Label Content="Task" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="tbTask" HorizontalAlignment="Left" Height="23" Margin="99,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="due Date" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="tbDueDate" HorizontalAlignment="Left" Height="23" Margin="99,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="cbIsDone" Content="Is Done" HorizontalAlignment="Left" Margin="99,110,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Save / Add" HorizontalAlignment="Left" Margin="99,142,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
